<script>
  document.querySelectorAll('.cm-tab').forEach(btn => {
    btn.addEventListener('click', () => {
      const tab = btn.dataset.tab;
      const container = btn.closest('.cm-section');
      container.querySelectorAll('.cm-tab').forEach(b => b.classList.remove('active'));
      container.querySelectorAll('.cm-panel').forEach(p => p.classList.remove('active'));
      btn.classList.add('active');
      container.querySelector(`[data-panel="${tab}"]`).classList.add('active');
    });
  });
</script>
